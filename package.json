{
  "name": "@kya-sms/sdk",
  "version": "1.0.0",
  "description": "Official JavaScript/TypeScript SDK for KYA SMS API - Send SMS, OTP, and manage campaigns",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "sms",
    "otp",
    "api",
    "sdk",
    "kya",
    "kyasms",
    "messaging",
    "bulk-sms",
    "campaign",
    "javascript",
    "typescript",
    "node"
  ],
  "author": {
    "name": "KYA SMS Team",
    "email": "support@kyasms.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ayeziel/kya-sms-js.git"
  },
  "bugs": {
    "url": "https://github.com/ayeziel/kya-sms-js/issues"
  },
  "homepage": "https://github.com/ayeziel/kya-sms-js#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}